<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Theme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AllCap">
        <item name="textAllCaps">false</item>
    </style>

    <style name="MySeekBar" parent="Theme.AppCompat.Light">
        <item name="android:progressBackgroundTint">#ffffff</item>
        <item name="android:progressTint">#ffffff</item>
        <item name="android:colorControlActivated">#c51162</item>
        <item name="android:colorControlNormal">#ffffff</item>
    </style>

    <style name="MyCheckbox">
        <item name="android:button">@null</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:drawableRight">@drawable/bg_checkbox</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <declare-styleable name="ShiningButton">
        <attr name="color" format="color" />
        <attr name="efx" format="reference" />
        <attr name="efx_width" format="dimension" />
    </declare-styleable>
</resources>
